{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "automergeType": "pr",
        "platformAutomerge": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": ["major", "minor", "patch"],
            "automerge": true,
            "automergeType": "pr",
            "platformAutomerge": true
        }
    ]
}
